@model EditViewModel
@{
    ViewData["Title"] = "修改个人信息";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Manage" asp-action="Edit" method="post" class="form-horizontal">
    <h4>修改个人信息</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="NickName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="NickName" Value="@ViewData["Nick"]" class="form-control" />
            <span asp-validation-for="NickName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Sign" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Sign" Value="@ViewData["Sign"]" class="form-control" />
            <span asp-validation-for="Sign" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">修改</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
